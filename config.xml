<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.richjames.app"
	version 	= "1.0.0">

	<name>The MIGHTY Rich James App!</name>

	<description>
		The official app for the musician/songwriter/producer Rich James
	</description>

	<author href="http://richjamesmusic.com"
		email="info@richjamesmusic.com">
		Rich James
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="rj.png" gap:role="default" />

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>


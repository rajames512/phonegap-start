<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.richjames.app"
	version 	= "1.0.0">

	<name>The MIGHTY Rich James App!</name>

	<description>
		The official app for the musician/songwriter/producer Rich James
	</description>

	<author href="http://richjamesmusic.com"
		email="info@richjamesmusic.com">
		Rich James
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>
	
	<preference name="permissions" value="none"/>
<preference name="disable-cursor" value="true" />
<preference name="fullscreen" value="true" />


	<icon src="rj.png" gap:role="default" hover="true" />

<!-- if a single splash screen is specified it will be used for all platforms.
    Multiple splash screens are recommended for iOS -->
<gap:splash src="splash.png" />


	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>
